@model IEnumerable<CrudMvcSebasCastanoEF.Models.Editoriale>

@{
    ViewData["Title"] = "Index";
}

<h1>Editoriales
</h1>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<form asp-controller="Editoriales" asp-action="Index">
    <p>
        Buscar: <input type="text" name="buscar" class="form-text" />
        <input type="submit" value="buscar" class="btn btn-sm btn-dark" />

    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nit)

            </th>
            <th>
                <a asp-action="Index" asp-route-filtro="@ViewData["FiltroNombre"]">

                    @Html.DisplayNameFor(model => model.Nombres)
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-filtro="@ViewData["FiltroTelefono"]">

                    @Html.DisplayNameFor(model => model.Telefono)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sitioweb)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nit)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sitioweb)
            </td>
           
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Nit">Edit</a> 
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Nit">Details</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Nit">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
