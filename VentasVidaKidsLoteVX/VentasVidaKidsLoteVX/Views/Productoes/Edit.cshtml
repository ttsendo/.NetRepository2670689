@model VentasVidaKidsLoteVX.Models.Producto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreEstado" class="control-label">Estado</label>
                <select asp-for="NombreEstado" class="form-control" asp-items="ViewBag.NombreEstado"></select>
                <span asp-validation-for="NombreEstado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCategoria" class="control-label">Categoria</label>
                <select asp-for="NombreCategoria" class="form-control" asp-items="ViewBag.NombreCategoria"></select>
                <span asp-validation-for="NombreCategoria" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="IdProducto" />
            <div class="form-group">
                <label asp-for="NombreProducto" class="control-label">Nombre Productos</label>
                <input asp-for="NombreProducto" class="form-control" />
                <span asp-validation-for="NombreProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionProducto" class="control-label">Descripcion</label>
                <input asp-for="DescripcionProducto" class="form-control" />
                <span asp-validation-for="DescripcionProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioProducto" class="control-label">Precio</label>
                <input asp-for="PrecioProducto" class="form-control" />
                <span asp-validation-for="PrecioProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label">Stock</label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volvert</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
