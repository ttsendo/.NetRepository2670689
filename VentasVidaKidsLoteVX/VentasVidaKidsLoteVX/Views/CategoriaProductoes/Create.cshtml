@model VentasVidaKidsLoteVX.Models.CategoriaProducto

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Categoria de Productos</h4>
<hr />
<div class="row">
    <div class="centrar_form">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container_form">
                <div class="caja">
                    <div class="form-group">
                        <label asp-for="NombreCategoria" class="control-label"></label>
                        <input asp-for="NombreCategoria" class="form-control" />
                        <span asp-validation-for="NombreCategoria" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="descripcion" asp-for="DescripcionCategoria" class="control-label"></label>
                        <input id="descripcion  " asp-for="DescripcionCategoria" class="form-control" required />
                        <span asp-validation-for="DescripcionCategoria" class="text-danger"></span>
                        <div class="valid-feedback">
                            Llenado corectamente

                        </div>
                        <div class="invalid-feedback">
                            El campo Descripcion es Obligatorio y con un maximo de 128 caracteres
                        </div>
                    </div>
                </div>
                <div class="form-group">

                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a class="btn btn-secondary" asp-action="Index">Regresar</a>
                </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
