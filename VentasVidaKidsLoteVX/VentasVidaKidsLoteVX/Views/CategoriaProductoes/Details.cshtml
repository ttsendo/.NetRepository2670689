@model VentasVidaKidsLoteVX.Models.CategoriaProducto
<style>
    .details-container {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    .details-header {
        background-color: #007bff;
        color: #fff;
        padding: 10px;
        border-radius: 5px 5px 0 0;
    }

    .details-title {
        margin: 0;
    }

    .details-content {
        background-color: #f9f9f9;
        border: 1px solid #ddd;
        border-top: none;
        border-radius: 0 0 5px 5px;
        padding: 20px;
        text-align: center;
    }

    .details-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin: 20px 0;
    }

    .details-item {
        padding: 10px;
        border-radius: 5px;
        background-color: #fff;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

        .details-item dt {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .details-item dd {
            margin-bottom: 10px;
        }

    .details-links {
        margin-top: 20px;
        text-align: left;
    }

        .details-links a {
            margin-right: 10px;
            text-decoration: none;
            color: #007bff;
        }

            .details-links a:hover {
                text-decoration: underline;
            }
</style>

@{
    ViewData["Title"] = "Details";
}

<div class="details-container">
    <div class="details-header">
        <h1 class="details-title">Detalle Categoria de Producto</h1>
    </div>
    <div class="details-content">
        <h4>Categorias de Productos</h4>
        <hr />
        <dl class="details-list">
            <div class="details-item">
                <dt>Nombre:</dt>
                <dd>@Html.DisplayFor(model => model.NombreCategoria)</dd>
            </div>
            <div class="details-item">
                <dt>Descripcion:</dt>
                <dd>@Html.DisplayFor(model => model.DescripcionCategoria)</dd>
              
            </div>
        </dl>
        <div class="details-links" style="text-decoration: none;">
            <a asp-action="Index" style="text-decoration: none; color: black;">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8" />
                </svg>
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.NombreCategoria" style="text-decoration: none; color: black;">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                </svg>
            </a> 
        </div>
    </div>
</div>
